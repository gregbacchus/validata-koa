    "data validator",
    "data clean",
    "data cleanse",
    "object validator",
    "request validator",
    "koa"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:gregbacchus/validata-koa.git"
  },
  "license": "MIT",
  "author": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
