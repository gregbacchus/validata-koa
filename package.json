    "@types/faker": "^5.5.9",
    "@types/jest": "^26.0.24",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/node": "^15.14.9",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
